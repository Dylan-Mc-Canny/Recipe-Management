@model Review
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<!-- TBC - Q1 - breadcrumb partial -->
<partial name="_BreadCrumbs" model=@(new [] { ("/","Home"), ("/Recipe","Recipes"), ($"/Recipe/details/{Model.RecipeId}",
                                 $"{Model.RecipeId}"), ("","Review") }) />
<body class="bg-primary-subtle">
<div class="card shadow rounded p-4">

    <!-- Title bar -->
    <div class="border-bottom d-flex align-items-center justify-content-between mb-3">
        <h3 class="text-primary">Create Review</h3>
    </div>

    <form asp-action="CreateReview">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- ticket StudentId should be a hidden input field named 'StudentId' in the form -->
        <input type="hidden" asp-for="RecipeId" />
        <div class="col-12 row">
            <div class="mt-3 col-6">
                <label asp-for="ReviewMessage" class="form-label"></label>
                <textarea rows="5" asp-for="ReviewMessage" class="form-control"></textarea>
                <span asp-validation-for="ReviewMessage" class="text-danger"></span>
            </div>

            <div class="col-6 row mt-4">

                <div class="rating col-3 ">
                    <label asp-for="ReviewRating" class="form-label fw-bold">Review Rating</label>
                    <div class="input-group col-8">
                        <input asp-for="ReviewRating" class="form-control" type="number" min="1" max="5"/>
                        <span class="input-group-text">/5</span>
                    </div>
                    <span asp-validation-for="ReviewRating" class="text-danger"></span>
                </div>


            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" aria-label="create">Create</button>
            <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.RecipeId
                aria-label="cancel">Cancel</a>
        </div>
    </form>
</div>
</body>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}